+}
diff --git a/sysmgr.pro b/sysmgr.pro
index f8ab8d8..450a9f1 100644
--- a/sysmgr.pro
+++ b/sysmgr.pro
@@ -672,6 +672,7 @@ linux-g++ {
     } else {
         ## Neither a desktop nor an emulator build, so must be a device
         include(device.pri)
